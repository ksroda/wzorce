<div class="btn-group actionButtons" >
	<button id="hit" type="button" class="btn btn-success actionButton" ng-click="triggerActionButton('hit')">Hit</button>
	<button id="stand" type="button" class="btn btn-success actionButton" ng-click="triggerActionButton('stand')">Stand</button>
	<button id="double" type="button" class="btn btn-success actionButton" ng-click="triggerActionButton('double')">Double</button>
	<button id="split" type="button" class="btn btn-success actionButton" ng-click="triggerActionButton('split')">Split</button>
