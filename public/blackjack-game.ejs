	<button id="10" type="button" class="btn btn-default betButton" ng-click="triggerBetButton(10)">10</button>
	<button id="25" type="button" class="btn btn-default betButton" ng-click="triggerBetButton(25)">25</button>
	<button id="100" type="button" class="btn btn-default betButton" ng-click="triggerBetButton(100)">100</button>
	<button id="500" type="button" class="btn btn-default betButton" ng-click="triggerBetButton(500)">500</button>
