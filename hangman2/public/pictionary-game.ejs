<div id="phaser"></div>

	<div id="tool-belt">
		<button id="white" type="button" class="btn btn-default color" ng-click="colorChange('white')"></button>
		<button id="yellow" type="button" class="btn btn-default color" ng-click="colorChange('yellow')"></button>
		<button id="red" type="button" class="btn btn-default color" ng-click="colorChange('red')"></button>
		<button id="blue" type="button" class="btn btn-default color" ng-click="colorChange('blue')"></button>
		<button id="green" type="button" class="btn btn-default color" ng-click="colorChange('green')"></button>
		<button id="black" type="button" class="btn btn-default color" ng-click="colorChange('black')"></button>
		<span id="size-buttons">
			<button id="1" type="button" class="btn btn-default size" ng-click="sizeChange(1)">1</button>
			<button id="10" type="button" class="btn btn-default size" ng-click="sizeChange(10)">10</button>
			<button id="30" type="button" class="btn btn-default size" ng-click="sizeChange(30)">30</button>
		</span>
	</div>
	<div id="right-container">
		<div id="chat">
			<div id="output-chat">
				<ul class="chat-list">
				</ul>
			</div>
			<div id="input-chat" class="row">
				<div id="message" class="col-sm-9">
					<input type="text" class="form-control" ng-model="message">
				</div>
				<div id="send-button" class="col-sm-3">
					<button type="button" class="btn btn-primary" ng-click="sendMessage()">Send</button>
				</div>
			</div>
		</div>
	</div>
	<div id="right-container-ranking">
		<div id="ranking">
			<div id="ranking-table-header" class="row">
				<div class="position col-sm-1"></div>
				<div class="name col-sm-6">Name</div>
				<div class="points col-sm-3">Points</div>
				<div class="points col-sm-1"></div>
			</div>
			<div id="ranking-table-content">
				<ul>
				</ul>
			</div>
		</div>
	</div>
	<div id="chat-ranking-navigator" class="btn-group">
		<button id="show-chat" type="button" class="btn btn-default">Chat</button>
		<button id="show-ranking" type="button" class="btn btn-default">Ranking</button>
	</div>



<script type="text/javascript" src="javascript/pictionary.js"></script>