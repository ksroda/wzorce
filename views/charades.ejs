<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
	<script type="text/javascript" src="paper.js\docs\assets\js\paper.js"></script>
	<script src="libraries/jquery-1.11.3.min.js"></script>

	<link rel="stylesheet" href="libraries/bootstrap-3.3.5-dist/css/bootstrap.min.css">
	<script src="libraries/bootstrap-3.3.5-dist/js/bootstrap.min.js"></script>
	<script src="libraries/angular-1.4.8/angular.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="phaser/phaser.js"></script>
	<script src="phaser/phaser.min.js"></script>
	<script src="javascript/charades.js"></script>
	<link rel="stylesheet" href="stylesheets/homepage.css">
	<link rel="stylesheet" href="stylesheets/charades.css">
</head>
<body>
	<div id="rooms" ng-app="myApp" ng-controller="customersCtrl">
		<div id="output-room">
			<button ng-repeat="x in rooms | orderBy: 'usersNum':true" type="button" class="btn btn-default btn-block roomEnter">
				<span class="singleRoomName">{{ x.name }}</span>
				<span class="badge">{{ x.usersNum }}</span>
			</button>
		</div>
		<div id="input-room" class="row">
			<div id="input-join" class="col-sm-9">
				  <input type="text" class="form-control" id="roomname" placeholder="Enter Room Name" data-toggle="tooltip" data-placement="left" title="To create a new room just enter its name here and click join">
			</div>
			<div id="submit-join" class="col-sm-3">
				  <button id="create" type="button" class="btn btn-success">Join Room</button>
			</div>
		</div>
	</div>
	<div id="tool-belt">
		<button id="white" type="button" class="btn btn-default color"></button>
		<button id="yellow" type="button" class="btn btn-default color"></button>
		<button id="red" type="button" class="btn btn-default color"></button>
		<button id="blue" type="button" class="btn btn-default color"></button>
		<button id="green" type="button" class="btn btn-default color"></button>
		<button id="black" type="button" class="btn btn-default color"></button>
		<span id="size-buttons">
			<button id="1" type="button" class="btn btn-default size">1</button>
			<button id="10" type="button" class="btn btn-default size">10</button>
			<button id="30" type="button" class="btn btn-default size">30</button>
		</span>
	</div>
	<%- include top-container.ejs %>
	<div id="right-container">
		<div id="chat">
			<div id="output-chat">
				<ul class="chat-list">
				</ul>
			</div>
			<div id="input-chat" class="row">
				<div id="message" class="col-sm-9">
					<input type="text" class="form-control">
				</div>
				<div id="send-button" class="col-sm-3">
					<button type="button" class="btn btn-primary">Send</button>
				</div>
			</div>
		</div>
	</div>
	<script>
		var app = angular.module('myApp', []);
		app.controller('customersCtrl', ["$scope", "$http", function($scope, $http) {
				$http.get("/charades/rooms").success(function(response) {
					$scope.rooms = response;
				});
					
				$scope.update = function(rooms) {
					$scope.$apply(function() {
						$scope.rooms = rooms;
					});
				}
		}]);
	</script>
</body>
</html>
