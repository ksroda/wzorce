<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
	<script type="text/javascript" src="paper.js\docs\assets\js\paper.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="javascript/blackjack.js"></script>
	<link rel="stylesheet" href="stylesheets/charades.css">
</head>
<body>
	<div id="rooms" ng-app="myApp" ng-controller="customersCtrl">
		<div class="btn-group-vertical roomdiv">
  		<button ng-repeat="x in rooms | orderBy: 'usersNum':true" type="button" class="btn btn-default btn-block roomEnter"><span id="singleRoomName">{{ x.name }}</span><span class="badge"> {{ x.usersNum }}</span></button>
		</div>
		<div id="join-room">
			<div class="form-inline">
				  <input type="text" class="form-control" id="roomname" placeholder="Enter Room Name">
				  <button id="create" type="button" class="btn btn-success">Join Room</button>
			</div>
		</div>
	</div>
	<br/>
	<div id="tool-belt">
		<button id="black" type="button" class="btn btn-default color">Black</button>
		<button id="white" type="button" class="btn btn-default color">White</button>
		<button id="1" type="button" class="btn btn-default size">1</button>
		<button id="10" type="button" class="btn btn-default size">10</button>
		<button id="30" type="button" class="btn btn-default size">30</button>
	</div>	
	<br/><br/>
	<canvas id="myCanvas" height="5000" width="5000"></canvas>
	<script>
		var app = angular.module('myApp', []);
		app.controller('customersCtrl', ["$scope", "$http", function($scope, $http) {
				$http.get("/blackjack/rooms").success(function(response) {
						$scope.rooms = response;
					});
					
				$scope.update = function(rooms) {
					$scope.$apply(function() {
						$scope.rooms = rooms;
					});
				}
		}]);
	</script>
	
</body>
</html>
