<div id="top-container">
	<div id="website-name">
		Pattern Games
		</div>
    <div id="you-are-playing-as">
		<div id="phrase">
			You are playing as
		</div>
		<div id="login">
			<div id="profile" class="log-button">
				<%- user.name %>
				<div id="statistics" class="row">
					<div id="overallpoints" class="col-sm-6">
						Points
						<br/>
						<%= user.overallPoints %><span class="glyphicon glyphicon-star"></span>
					</div>
					<div id="time" class="col-sm-6">
						Time
						<br/>
						<%= Math.floor(user.overallTime/1000/60/60) %>h
					</div>
				</div>
			</div>
			<% if(user.guest) { %>
				<div id="sign-in" class="log-button">
					Sign in
					<a href="/login"></a>
				</div>
				<div id="register" class="log-button">
					Register
					<a href="/register"></a>
				</div>
			<% } else { %>
				<div id="sign-out" class="log-button">
					Sign out
					<a href="/logout"></a>
				</div>
			<% } %>
		</div>
	</div>  
</div>



<div id="left-container" ng-controller="friendsCtrl">
	<div id="friends-header">
		Friends
	</div>
	<ul class="FriendsList">
		<li ng-repeat="x in friends">
			{{ x }}
		</li>
	</ul>
	<div id="input-friend" class="row">
		<div id="input-add" class="col-sm-9">
			<input type="text" class="form-control" id="friendname" placeholder="Enter Friend Name">
		</div>
		<div id="submit-add" class="col-sm-3">
			<button id="add" type="button" class="btn btn-success">Add</button>
		</div>
	</div>
</div>